<div class="row">
  <div class="col-12">
    <div class="m-portlet">
      <div class="m-portlet__head">
        <div class="m-portlet__head-caption">
          <div class="m-portlet__head-title">
            <h3 class="m-portlet__head-text">Filters</h3>
          </div>
        </div>
      </div>
      <div class="m-portlet__body informations-portlet">
        <div class="row">
          <div class="col-3">
            <h6 class="m--margin-bottom-15">Finitions</h6>
            <div class="versions-filters m-checkbox-list">
              {{#each trimLevelOptions as | filter |}}
                <label class="m-checkbox">
                  {{input
                    id=filter.name
                    type="checkbox"
                    checked=filter.isActive
                  }}
                  <span></span>
                  {{filter.name}}
                </label>
              {{/each}}
            </div>
          </div>
          <div class="col-3">
            <h6 class="m--margin-bottom-15">Engines</h6>
            <div class="versions-filters m-checkbox-list">
              {{#each enginesOptions as | filter |}}
                <label class="m-checkbox">
                  {{input
                    id=filter.inputId
                    type="checkbox"
                    checked=filter.isActive
                  }}
                  <span></span>
                  {{filter.name}}
                </label>
              {{/each}}
            </div>
          </div>
          <div class="col-3">
            <h6 class="m--margin-bottom-15">Gearboxes</h6>
            <div class="versions-filters m-checkbox-list">
              {{#each gearboxesOptions as | filter |}}
                <label class="m-checkbox">
                  {{input
                    id=filter.inputId
                    type="checkbox"
                    checked=filter.isActive
                  }}
                  <span></span>
                  {{filter.name}}
                </label>
              {{/each}}
            </div>
          </div>
          <div class="col-3">
            <h6 class="m--margin-bottom-15">Transmissions</h6>
            <div class="versions-filters m-checkbox-list">
              {{#each transmissionsOptions as | filter |}}
                <label class="m-checkbox">
                  {{input
                    id=filter.inputId
                    type="checkbox"
                    checked=filter.isActive
                  }}
                  <span></span>
                  {{filter.name}}
                </label>
              {{/each}}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-12">
    {{versions-table versionsArray=filteredVersion}}
  </div>
</div>
