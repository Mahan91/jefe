{{#make-list updateLetter=(action 'updateLetter') letter=letter }}
  {{#each model as |make|}}
    <li class="showroom-make-item mt-list-item">
      <section class="infos">
        <h4 class="uppercase font-lg bold font-blue-ebonyclay" data-role="name">{{make.name}}</h4>
        <p class="list-datetime font-grey-mint small">{{make.displayDate}}</p>
      </section>
      {{logo-img url=make.logoURL className='thumbnail make-logo'}}
      {{#link-to "lang.showroom.make" make}}{{/link-to}}
    </li>
  {{/each}}
{{/make-list}}
