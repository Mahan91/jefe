<section class="make-infos">
  {{logo-img url=model.logoURL className='thumbnail' tagName="h2" altText=model.name}}
  <dl class="dl-horizontal">
    <dt>{{t 'models.base.id'}}</dt>
    <dd>{{model.id}}</dd>
    <dt>{{t 'models.base.name'}}</dt>
    <dd>{{model.name}}</dd>
    <dt>{{t 'models.base.startDate'}}</dt>
    <dd>{{format-date model.startDate noDateText=(t 'application.noDate')}}</dd>
    <dt>{{t 'models.base.endDate'}}</dt>
    <dd>{{format-date model.endDate noDateText=(t 'application.noDate')}}</dd>
    <dt>{{t 'models.base.positionQuote'}}</dt>
    <dd>{{model.positionQuote}}</dd>
  </dl>
  <div class="actions">
    {{#link-to "lang.showroom" classNames="btn blue"}} {{t 'index.showroom.make.change'}} {{/link-to}}
  </div>
</section>
{{outlet}}