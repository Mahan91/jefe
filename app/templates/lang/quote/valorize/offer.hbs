<div class="m-subheader ">
  <div class="d-flex align-items-center">
    <div class="mr-auto">
      <h1 class="m-subheader__title m-subheader__title--separator">
        {{t 'index.quote.title'}}
      </h1>
    </div>
  </div>
</div>
<div class="m-content">
  <div class="m-wizard m-wizard--2 m-wizard--success">
    <!--begin: Message container -->
    <div class="m-portlet__padding-x">
      <!-- Here you can put a message or alert -->
    </div>
    <!--end: Message container -->
    <!--begin: Form Wizard Head -->
    <div class="m-wizard__head">
      <!--begin: Form Wizard Progress -->
      <div class="m-wizard__progress">
        <div class="progress">
          <div class="progress-bar" role="progressbar"  aria-valuenow="50" aria-valuemin="0" aria-valuemax="100" style="width: 50%;"></div>
        </div>
      </div>
      <!--end: Form Wizard Progress -->
      <!--begin: Form Wizard Nav -->
      <div class="m-wizard__nav">
        <div class="m-wizard__steps">
          <div class="m-wizard__step m-wizard__step--done">
            {{#link-to 'lang.quote.valorize.vehicle-identification' class="m-wizard__step-number"}}
              <span>
                <i class="la la-automobile"></i>
              </span>
            {{/link-to}}
            <div class="m-wizard__step-info">
              <div class="m-wizard__step-title">
                1. Identify your vehicle
              </div>
            </div>
          </div>
          <div class="m-wizard__step m-wizard__step--current">
           {{#link-to 'lang.quote.valorize.offer' class="m-wizard__step-number"}}
              <span>
                <i class="la la-bar-chart"></i>
              </span>
            {{/link-to}}
            <div class="m-wizard__step-info">
              <div class="m-wizard__step-title">
                2. Select value to compute
              </div>
            </div>
          </div>
          <div class="m-wizard__step">
            {{#link-to 'lang.quote.valorize.criteria' class="m-wizard__step-number"}}
              <span>
                <i class="fa  flaticon-layers"></i>
              </span>
            {{/link-to}}
            <div class="m-wizard__step-info">
              <div class="m-wizard__step-title">
                3. Define your criteria
              </div>
            </div>
          </div>
        </div>
      </div>
      <!--end: Form Wizard Nav -->
    </div>
    <!--end: Form Wizard Head -->
  </div>
  <div class="row">
    <div class="col-8">
      <ul class="offer-list row">
        <li class="col-4 m--margin-bottom-30">
          <div class="offer-list__item border-argus" {{action "selectOffer" "extended-market-value"}}>
            <h5>Valeurs de marché Argus</h5>
            <p class="m--marginless">Calculer la cote et les valeurs de marché de votre véhicule</p>
          </div>
        </li>
        <li class="col-4 m--margin-bottom-30">
          <div class="offer-list__item border-danger" {{action "selectOffer" "custom-market-value"}}>
            <h5>Cote Argus personnalisée</h5>
            <p class="m--marginless">Caculer la cote de votre véhicule</p>
          </div>
        </li>
        <li class="col-4 m--margin-bottom-30">
          <div class="offer-list__item border-info" {{action "selectOffer" "prevar-value"}}>
            <h5>Valeur résiduelle Prevar</h5>
            <p class="m--marginless">Calculer la valeur Argus prévisionnelle de votre véhicule</p>
          </div>
        </li>
        <li class="col-4 m--margin-bottom-30">
          <div class="offer-list__item border-focus" {{action "selectOffer" "past-market-value"}}>
            <h5>Cote à date passé et prix du neuf</h5>
            <p class="m--marginless">Caculer la cote de votre véhicule à une date passée avec le prix du neuf inclus</p>
          </div>
        </li>
        <li class="col-4 m--margin-bottom-30">
          <div class="offer-list__item border-primary" {{action "selectOffer" "past-stock-market-value"}}>
            <h5>Cote à date passé</h5>
            <p class="m--marginless">Caculer la cote de votre véhicule à une date passée</p>
          </div>
        </li>
        <li class="col-4 m--margin-bottom-30">
          <div class="offer-list__item border-success" {{action "selectOffer" "part-exchange-value"}}>
            <h5>Valeur de reprise</h5>
            <p class="m--marginless">Add a description</p>
          </div>
        </li>
      </ul>
    </div>
    <div class="col-4">
      <div class="m-portlet">
        <div class="m-portlet__head">
          <div class="m-portlet__head-caption">
            <div class="m-portlet__head-title">
              <h3 class="m-portlet__head-text">Valorized vehicle</h3>
            </div>
          </div>
        </div>
        <div class="m-portlet__body">
          <div class="vehicle-card m--clearfix">
            <div class="vehcile-infos">
              <h5 class="h5"> {{model.version.make.name}} - {{model.version.submodel.name}}</h5>
              <p class="m--margin-bottom-5">Gén. {{model.version.generation.name}} Pe. {{model.version.phase.name}} - {{moment-format model.releasedAt "DD/MM/YYYY"}}</p>
              <p class="m--marginless">{{model.version.name}}</p>
              </div>
            <div class="vehcile-make-logo">
              {{logo-img url=model.version.make.logoURL className='thumbnail make-logo'}}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
