<div class="m-content">
  <div class="m-wizard m-wizard--2 m-wizard--success">
    <div class="m-portlet__padding-x">
    </div>
    <div class="m-wizard__head">
      <div class="m-wizard__progress">
        <div class="progress">
          {{! template-lint-disable }}
          <div
            class="progress-bar"
            role="progressbar"
            aria-valuenow="50"
            aria-valuemin="0"
            aria-valuemax="100"
            style="width: 50%;"
          >
          {{! template-lint-enable }}
          </div>
        </div>
      </div>
      <div class="m-wizard__nav">
        <div class="m-wizard__steps">
          <div class="m-wizard__step m-wizard__step--done">
            {{#link-to
              "lang.quote.valorize.vehicle-identification"
              class="m-wizard__step-number"
            }}
              <span>
                <i class="la la-automobile"></i>
              </span>
            {{/link-to}}
            <div class="m-wizard__step-info">
              <div class="m-wizard__step-title">
                {{t "valorization.wizzard.identity.title"}}
              </div>
            </div>
          </div>
          <div class="m-wizard__step m-wizard__step--current">
            {{#link-to
              "lang.quote.valorize.offer"
              class="m-wizard__step-number"
            }}
              <span>
                <i class="la la-bar-chart"></i>
              </span>
            {{/link-to}}
            <div class="m-wizard__step-info">
              <div class="m-wizard__step-title">
                {{t "valorization.wizzard.offer.title"}}
              </div>
            </div>
          </div>
          <div class="m-wizard__step">
            {{#link-to
              "lang.quote.valorize.criteria"
              class="m-wizard__step-number"
            }}
              <span>
                <i class="fa  flaticon-layers"></i>
              </span>
            {{/link-to}}
            <div class="m-wizard__step-info">
              <div class="m-wizard__step-title">
                {{t "valorization.wizzard.criteria.title"}}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-12 col-lg-7 col-xl-8 col order-2 order-lg-1">
      <ul class="offer-list list-unstyled row">
        <li class="col-12 col-md-6 col-lg-12 col-xl-4 m--margin-bottom-30">
          <button {{action "selectOffer" "extended-market-value"}}
            class="offer-list__item border-argus"
          >
            <h5>{{t "valorization.offers.extended"}}</h5>
            <p class="m--marginless">{{t "valorization.wizzard.offer.extended.description"}}</p>
          </button>
        </li>
        <li class="col-12 col-md-6 col-lg-12 col-xl-4 m--margin-bottom-30">
          <button {{action "selectOffer" "custom-market-value"}}
            class="offer-list__item border-danger"
          >
            <h5>{{t "valorization.offers.custom"}}</h5>
            <p class="m--marginless">{{t "valorization.wizzard.offer.custom.description"}}</p>
          </button>
        </li>
        <li class="col-12 col-md-6 col-lg-12 col-xl-4 m--margin-bottom-30">
          <button {{action "selectOffer" "prevar-value"}}
            class="offer-list__item border-info"
          >
            <h5>{{t "valorization.offers.residual"}}</h5>
            <p class="m--marginless">{{t "valorization.wizzard.offer.residual.description"}}</p>
          </button>
        </li>
        <li class="col-12 col-md-6 col-lg-12 col-xl-4 m--margin-bottom-30">
          <button {{action "selectOffer" "past-stock-market-value"}}
            class="offer-list__item border-focus"
          >
            <h5>{{t "valorization.offers.pastStock"}}</h5>
            <p class="m--marginless">{{t "valorization.wizzard.offer.pastStock.description"}}</p>
          </button>
        </li>
        <li class="col-12 col-md-6 col-lg-12 col-xl-4 m--margin-bottom-30">
          <button {{action "selectOffer" "past-market-value"}}
            class="offer-list__item border-primary"
          >
            <h5>{{t "valorization.offers.past"}}</h5>
            <p class="m--marginless">{{t "valorization.wizzard.offer.past.description"}}</p>
          </button>
        </li>
        <li class="col-12 col-md-6 col-lg-12 col-xl-4 m--margin-bottom-30">
          <button {{action "selectOffer" "part-exchange-value"}}
            class="offer-list__item border-success"
          >
            <h5>{{t "valorization.offers.exhange"}}</h5>
            <p class="m--marginless">{{t "valorization.wizzard.offer.exhange.description"}}</p>
          </button>
        </li>
      </ul>
    </div>
    <div class="col-12 col-lg-5 col-xl-4 col order-1 order-lg-2">
      <div class="m-portlet">
        <div class="m-portlet__head">
          <div class="m-portlet__head-caption">
            <div class="m-portlet__head-title">
              <h3 class="m-portlet__head-text">{{t "valorization.wizzard.offer.vehicle"}}</h3>
            </div>
          </div>
        </div>
        <div class="m-portlet__body">
          <div class="valorization-card m--clearfix">
            <div class="vehicle-infos">
              <h5 class="h5"> {{model.version.make.name}} - {{model.version.submodel.name}}</h5>
              <p class="m--margin-bottom-5">{{t "application.gen"}} {{model.version.generation.name}} {{t "application.pe"}} {{model.version.phase.name}} - {{moment-format model.releasedAt (t "application.dateFormat")}}</p>
              <p class="m--marginless">{{model.version.name}}</p>
            </div>
            <div class="vehicle-make-logo">
              {{logo-img url=model.version.make.logoURL className="thumbnail make-logo"}}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
