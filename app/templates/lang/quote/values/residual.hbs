
<div class="m-content">
  <div class="row">
    <div class="col-12 col-xl-4">
      {{valorization-informations valorization=model}}
    </div>
    <div class="col-xl-8 col-12 vehicle-data">
      <div class="m-portlet">
          <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
              <div class="m-portlet__head-title">
                <h3 class="m-portlet__head-text">{{t 'valorization.values.title'}}</h3>
              </div>
            </div>
          </div>
          <div class="m-portlet__body">
            {{#if model.isComputing}}
              <div class="m--align-center m--font-bold h3 m--margin-top-15 m--margin-bottom-60">
                <p class="m--margin-bottom-30">{{t 'valorization.values.computing'}}</p>
                <div class="m-loader m-loader--brand m-loader--lg"></div>
              </div>
            {{else}}
              <div class="row">
                <div class="col-12 col-md-6">
                  <section>
                    <div class="section-header m--margin-bottom-15 m--margin-top-0">
                      <h4 class="m--marginless section-header__title m--padding-right-15">{{t 'valorization.values.initial'}}</h4>
                      <div class="section-header__separator"><hr /></div>
                    </div>
                    <p class="main-value-display text-right">{{model.prevarValues.content.initialPrice}} €</p>
                  </section>
                </div>
                <div class="col-12 col-md-6">
                 <section>
                  <div class="section-header m--margin-bottom-15 m--margin-top-0">
                    <h4 class="m--marginless section-header__title m--padding-right-15">{{t 'valorization.values.residual'}}</h4>
                    <div class="section-header__separator"><hr /></div>
                  </div>
                  <p class="main-value-display text-right">{{model.prevarValues.content.value}} €</p>
                </section>
              </div>
            </div>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
</div>
