<div class=" login">
  <div class="logo"></div>
  <div class="content">
    <form class="login-form" action="index.html" method="post">
      <h3 class="form-title font-green">Sign In</h3>
      <div class="alert alert-danger display-hide">
          <button class="close" data-close="alert"></button>
          <span> Enter any username and password. </span>
      </div>
      <div class="form-group">
        <label class="control-label visible-ie8 visible-ie9">Application ID</label>
        {{input value=applicationId class="form-control form-control-solid placeholder-no-fix" autocomplete="off" placeholder="Application ID" name="applicationId"}}
      </div>
      <div class="form-group">
        <label class="control-label visible-ie8 visible-ie9">Application Secret</label>
        {{input value=applicationId class="form-control form-control-solid placeholder-no-fix" autocomplete="off" placeholder="Application Secret" name="applicationSecret" type="password"}}
      </div>
      <div class="form-group">
        <label class="control-label visible-ie8 visible-ie9">Username</label>
        {{input value=username class="form-control form-control-solid placeholder-no-fix" autocomplete="off" placeholder="Username" name="applicationId"}}
      </div>
      <div class="form-group">
        <label class="control-label visible-ie8 visible-ie9">Password</label>
        {{input value=password class="form-control form-control-solid placeholder-no-fix" autocomplete="off" placeholder="Password" name="applicationSecret" type="password"}}
      </div>
      <div class="form-actions">
        <button {{action "login"}} class="btn green uppercase">Login</button>
      </div>
    </form>
  </div>
</div>