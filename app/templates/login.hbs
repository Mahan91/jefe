
<div class="logo">
<img src="{{rootURL}}assets/logos/Jeff_logo_small.png">
</div>
<div class="content">
  <form class="login-form" {{action "authenticate" on='submit'}}>
    <h3 class="form-title font-green">Sign In</h3>
    {{#if errorMessage}}
      <div class="alert alert-danger">
        <span>{{errorMessage}}</span>
      </div>
    {{/if}}
    <div class="form-group">
      <label class="control-label visible-ie8 visible-ie9">Application ID</label>
      {{input value=applicationId class="form-control form-control-solid placeholder-no-fix" autocomplete="off" placeholder="Application ID" name="applicationId"}}
    </div>
    <div class="form-group">
      <label class="control-label visible-ie8 visible-ie9">Application Secret</label>
      {{input value=applicationSecret class="form-control form-control-solid placeholder-no-fix" autocomplete="off" placeholder="Application Secret" name="applicationSecret" type="password"}}
    </div>
    <div class="form-group">
      <label class="control-label visible-ie8 visible-ie9">Username</label>
      {{input value=username class="form-control form-control-solid placeholder-no-fix" autocomplete="off" placeholder="Username" name="username"}}
    </div>
    <div class="form-group">
      <label class="control-label visible-ie8 visible-ie9">Password</label>
      {{input value=password class="form-control form-control-solid placeholder-no-fix" autocomplete="off" placeholder="Password" name="password" type="password"}}
    </div>
    <div class="form-actions">
      <button type="sumbit" class="btn green uppercase">Login</button>
    </div>
  </form>
</div>