{{#link-to "lang.quote.valorization" valorization class="row m--padding-top-15 m--padding-bottom-15 align-items-center list-item-content"}}
  <div class="col-4 col-lg-3">{{valorization-offer-badge offer=valorization.offer}}</div>
  <div class="col-4 col-lg-5 col-xl-4 valorization-card">
    <div class="vehicle-infos">
      <h5 class="h6"> {{vehicle.content.make.name}} - {{vehicle.content.submodel.name}}</h5>
      <p class="m--margin-bottom-5">Gen. {{vehicle.content.generation.name}} Pe. {{vehicle.content.phase.name}}</p>
      <p class="m--marginless">{{vehicle.content.name}}</p>
    </div>
    <div class="vehicle-make-logo">
      {{logo-img url=vehicle.content.make.logoURL className='thumbnail make-logo'}}
    </div>
  </div>
  {{#if largeMode}}
    <div class="col-1">{{if valorization.releasedAt (moment-format valorization.releasedAt 'YYYY-MM-DD')}}</div>
    <div class="col-1">{{if valorization.isPrevar (if valorization.returnedAt (moment-format valorization.returnedAt 'YYYY-MM-DD')) (if valorization.calculatedFor (moment-format valorization.calculatedFor 'YYYY-MM-DD'))}}</div>
    <div class="col-2">{{valorization.mileage}} {{t 'techData.units.km'}}</div>
  {{else}}
    <div class="col-2">
      <p class="m--margin-bottom-5">{{if valorization.releasedAt (moment-format valorization.releasedAt 'YYYY-MM-DD')}}</p>
      <p class="m--margin-bottom-5">{{if valorization.isPrevar (if valorization.returnedAt (moment-format valorization.returnedAt 'YYYY-MM-DD')) (if valorization.calculatedFor (moment-format valorization.calculatedFor 'YYYY-MM-DD'))}}</p>
      <p class="m--marginless">{{valorization.mileage}} {{t 'techData.units.km'}}</p>
    </div>
  {{/if}}
  <div class="col-2 col-xl-1 m--font-bold">{{valorization.mainValue.content.value}} â‚¬</div>
{{/link-to}}
