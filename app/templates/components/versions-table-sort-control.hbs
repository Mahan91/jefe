<div
  class="col"
>
  {{#each sortOptions as |sortOption|}}
    <button {{action "changeSortProperties" sortOption.property}}
      class="sort-param-button {{if sortOption.isActive "is-active"}}"
    >
      {{sortOption.name}}
    </button>
  {{/each}}
</div>
{{#if activeProperty}}
  <div
    class="sort-param-button pull-right col-auto"
  >
    <i
      class="m-nav__link-icon m--icon-font-size-lg3 la {{if isDesc "la-sort-desc" "la-sort-asc"}}"
    >
    </i>
  </div>
{{/if}}
